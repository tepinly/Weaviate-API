{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "es6",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": "src",
    "declaration": true
  },
  "include": [
    "src/*",
    "src/interfaces/classObj.ts",
    "src/interfaces/classObjProp.ts",
    "src/queries/data.ts",
    "src/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ]
}